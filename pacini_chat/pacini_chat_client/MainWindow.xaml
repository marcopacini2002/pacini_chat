<Window x:Class="pacini_chat_client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:pacini_chat_client"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Closed="Window_Closed">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black" Offset="0"/>
                <GradientStop Color="#FF8D0000" Offset="0.202"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Button x:Name="btn_iniva" Content="INVIA" HorizontalAlignment="Left" Margin="590,328,0,0" VerticalAlignment="Top" Width="98" Click="btn_iniva_Click" RenderTransformOrigin="0.387,1.521" Height="24" FontFamily="Showcard Gothic"/>
        <ListBox x:Name="lst_msg" HorizontalAlignment="Left" Height="288" Margin="45,35,0,0" VerticalAlignment="Top" Width="643" Background="Black" Foreground="White"/>
        <TextBox x:Name="txt_msg" HorizontalAlignment="Left" Height="24" Margin="45,328,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="540" Foreground="White" Background="Black"/>

    </Grid>
</Window>
